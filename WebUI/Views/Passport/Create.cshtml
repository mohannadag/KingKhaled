@using WebUI.Models.HR.Passports;
@model Passport

@{
    //page title
    ViewData["Title"] = "بيانات جواز السفر";
}

<div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
    <div class="widget-content widget-content-area br-6">
        <form enctype="multipart/form-data" asp-controller="passport" asp-action="create" method="post">
            <div class="content-header clearfix pb-3">
                <div class="float-left">
                    <h1 style="display:inline;">
                        بيانات جواز السفر
                    </h1>
                    <span>
                        <i class="fas fa-arrow-circle-left"></i>
                        <a asp-action="index" class="">الرجوع للخلف</a>
                    </span>
                </div>

                <div class="float-right">
                    <button type="submit" name="save" class="btn btn-primary">
                        <i class="far fa-save"></i>
                        حفظ
                    </button>
                </div>
            </div>

            @* info card *@
            <div id="accordion3">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        معلومات جواز السفر
                        <button type="button" class="btn btn-outline-dark float-right" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"></button>
                    </div>
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion3">
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="PassportNumber" class="col-sm-2 col-form-label">رقم الجواز</label>
                                <div class="col-sm-10">
                                    <input asp-for="PassportNumber" class="form-control" placeholder="" />
                                    <span asp-validation-for="PassportNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Issuer" class="col-sm-2 col-form-label">مكان الاصدار</label>
                                <div class="col-sm-10">
                                    <input asp-for="Issuer" class="form-control" placeholder="" />
                                    <span asp-validation-for="Issuer" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-2">
                                    <label asp-for="IssueDate" class="col-form-label">تاريخ الاصدار ميلادي</label>
                                </div>
                                <div class="col-sm-4">
                                    <input asp-for="IssueDate" class="form-control" placeholder="" type="date" />
                                    <span asp-validation-for="IssueDate" class="text-danger"></span>
                                </div>

                                <div class="col-sm-2">
                                    <label asp-for="IssueDateHijri" class="col-form-label">تاريخ الاصدار هجري</label>
                                </div>
                                <div class="col-sm-4">
                                    <input asp-for="IssueDateHijri" class="form-control" placeholder="" type="date" />
                                    <span asp-validation-for="IssueDateHijri" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-2">
                                    <label asp-for="ExpireDate" class="col-form-label">تاريخ الانتهاء ميلادي</label>
                                </div>
                                <div class="col-sm-4">
                                    <input asp-for="ExpireDate" class="form-control" placeholder="" type="date" />
                                    <span asp-validation-for="ExpireDate" class="text-danger"></span>
                                </div>

                                <div class="col-sm-2">
                                    <label asp-for="ExpireDateHijri" class="col-form-label">تاريخ الانتهاء هجري</label>
                                </div>
                                <div class="col-sm-4">
                                    <input asp-for="ExpireDateHijri" class="form-control" placeholder="" type="date" />
                                    <span asp-validation-for="ExpireDateHijri" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Notes" class="col-sm-2 col-form-label">ملاحظة</label>
                                <div class="col-sm-10">
                                    <input asp-for="Notes" class="form-control" placeholder="" />
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">حفظ</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="container">
</div>
@section Scripts{
    <script>
        $(document).ready(function () {

        });
    </script>
} 