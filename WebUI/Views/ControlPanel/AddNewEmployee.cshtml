            "levelId": $("#levelId").val(),
           
            "nationalityId": $("#nationalityId").val(),
        }
        console.log("empinfo" + JSON.stringify(SendInfo));
        $.ajax({
            type: 'POST',
            async: false,
            contentType: "application/json",

            data: JSON.stringify(SendInfo),
