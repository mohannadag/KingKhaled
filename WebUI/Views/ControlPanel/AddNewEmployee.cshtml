    function GetAllqualification()
    {
        $.ajax({
            type: 'GET',
            async: false,
            url: 'http://192.168.100.154:8080/API/Qualification/GetAll',
            success: function (msg) {
                console.log(msg);

                var s = '  <option> تحديد الوظيفة  </option>';
                for (i = 0; i < msg.length; i++) {

                    s += '<option value=' + msg[i].id + '>' + msg[i].name + '</option>';
                }
                document.getElementById("qualificationId").innerHTML = s;
            },
            error: function (data) {
                console.log(data.error);
            }
        })
    }
